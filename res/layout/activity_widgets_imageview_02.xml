<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	<GridLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:columnCount="4"
	            android:orientation="horizontal">
		<Button android:id="@+id/btnCenter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="center"/>
		<Button android:id="@+id/btnCenterCrop"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="centerCrop"/>
		<Button android:id="@+id/btnCenterInside"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="centerInside"/>
		<Button android:id="@+id/btnFitCenter"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="fitCenter"/>
		<Button android:id="@+id/btnFitStart"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="fitStart"/>
		<Button android:id="@+id/btnFitEnd"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="fitEnd"/>
		<Button android:id="@+id/btnFitXY"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="fitXY"/>
	</GridLayout>
	<ImageView android:id="@+id/iv"
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"
	           android:scaleType="center"
	           android:src="@drawable/imageview_adjust_view_bounds"
		/>
</LinearLayout>